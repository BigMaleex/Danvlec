<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="APMain" prefHeight="500.0" prefWidth="420.0" stylesheets="@../CSS/PopupBDErr.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PopupBDErrController">
   <children>
       <ScrollPane fitToWidth="true" layoutX="20.0" layoutY="75.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
           <content>
               <VBox alignment="TOP_CENTER" layoutX="40.0" layoutY="34.0" prefHeight="0.0" prefWidth="100.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                   <padding>
                       <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                   </padding>
                   <children>
                       <HBox alignment="CENTER_LEFT" prefHeight="0.0" prefWidth="200.0" spacing="10.0">
                           <children>
                               <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                                   <image>
                                       <Image url="@../Images/exclamation-triangle-icon.png" />
                                   </image>
                               </ImageView>
                               <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                                   <children>
                                       <Label styleClass="LBLHeader" text="Error de conexión" />
                                       <Label styleClass="LBLHeaderContent" text="No se pudo conectar con la base de datos del servidor" />
                                   </children>
                               </VBox>
                           </children>
                       </HBox>
                       <TextArea fx:id="TATError" editable="false" maxHeight="100.0" maxWidth="1.7976931348623157E308" minHeight="100.0" prefHeight="100.0" prefWidth="200.0" promptText="Detalles del error" styleClass="custom-text-area" wrapText="true" />
                       <AnchorPane fx:id="APReload" layoutX="30.0" layoutY="304.0" onMouseClicked="#APReloadOnMouseClicked" onMouseEntered="#APReloadOnMouseEntered" onMouseExited="#APReloadOnMouseExited" prefHeight="0.0" prefWidth="200.0">
                           <children>
                               <HBox alignment="CENTER" prefHeight="0.0" prefWidth="200.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                   <padding>
                                       <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                   </padding>
                                   <children>
                                       <StackPane prefHeight="10.0" prefWidth="10.0">
                                           <children>
                                               <ImageView fx:id="IMGReloadHover" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" />
                                               <ImageView fx:id="IMGReload" fitHeight="16.0" fitWidth="16.0" layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" />
                                           </children>
                                       </StackPane>
                                       <Label fx:id="LBLReload" text="Reintentar conexión" />
                                   </children>
                               </HBox>
                           </children>
                           <cursor>
                               <Cursor fx:constant="HAND" />
                           </cursor>
                       </AnchorPane>
                       <AnchorPane fx:id="APContinue" layoutX="30.0" layoutY="376.0" onMouseClicked="#APContinueOnMouseClicked" onMouseEntered="#APContinueOnMouseEntered" onMouseExited="#APContinueOnMouseExited" prefHeight="0.0" prefWidth="200.0">
                           <children>
                               <HBox alignment="CENTER" prefHeight="0.0" prefWidth="200.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                   <padding>
                                       <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                   </padding>
                                   <children>
                                       <StackPane prefHeight="16.0" prefWidth="16.0">
                                           <children>
                                               <ImageView fx:id="IMGContinueHover" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" />
                                               <ImageView fx:id="IMGContinue" fitHeight="16.0" fitWidth="16.0" layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" />
                                           </children>
                                       </StackPane>
                                       <Label fx:id="LBLContinue" text="Continuar sin conexión" />
                                   </children>
                               </HBox>
                           </children>
                           <cursor>
                               <Cursor fx:constant="HAND" />
                           </cursor>
                       </AnchorPane>
                       <AnchorPane fx:id="APCopy" onMouseClicked="#APCopyOnMouseClicked" onMouseEntered="#APCopyOnMouseEntered" onMouseExited="#APCopyOnMouseExited" prefHeight="0.0" prefWidth="200.0">
                           <children>
                               <HBox alignment="CENTER" prefHeight="0.0" prefWidth="200.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                   <padding>
                                       <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                   </padding>
                                   <children>
                                       <StackPane prefHeight="16.0" prefWidth="16.0">
                                           <children>
                                               <ImageView fx:id="IMGCopy" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" />
                                               <ImageView fx:id="IMGCopyHover" fitHeight="16.0" fitWidth="16.0" layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" />
                                           </children>
                                       </StackPane>
                                       <Label fx:id="LBLCopy" text="Copiar error al portapapeles" />
                                   </children>
                               </HBox>
                           </children>
                           <cursor>
                               <Cursor fx:constant="HAND" />
                           </cursor>
                       </AnchorPane>
                       <Button fx:id="BTNClose" mnemonicParsing="false" onMouseClicked="#BTNCloseOnMouseClicked" onMouseEntered="#BTNCloseOnMouseEntered" onMouseExited="#BTNCloseOnMouseExited" text="X Cerrar">
                           <cursor>
                               <Cursor fx:constant="HAND" />
                           </cursor>
                       </Button>
                  <AnchorPane fx:id="APChangeIP" onMouseClicked="#APChangeIPOnMouseClicked" onMouseEntered="#APChangeIPOnMouseEntered" onMouseExited="#APChangeIPOnMouseExited" prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <StackPane prefHeight="16.0" prefWidth="16.0">
                                 <children>
                                    <ImageView fx:id="IMGChangeIPIcon" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" />
                                    <ImageView fx:id="IMGChangeIPIconHover" fitHeight="16.0" fitWidth="16.0" layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" />
                                 </children>
                              </StackPane>
                              <Label fx:id="LBLChangeIP" text="Cambiar dirección IP" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                     </children>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </AnchorPane>
                       <AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="150.0" prefHeight="100.0" prefWidth="200.0" styleClass="APContainer">
                           <children>
                               <VBox fx:id="contentVBox" alignment="CENTER" layoutX="40.0" layoutY="-32.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                   <padding>
                                       <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                   </padding>

                                   <children>
                                       <HBox alignment="CENTER_LEFT" spacing="10.0">
                                           <ImageView fx:id="IMGOfflineMode" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" />
                                           <Label styleClass="LBLContentTitle" text="Modo sin conexión disponible" />
                                       </HBox>

                                       <!-- esta es la Label que debe envolver -->
                                       <Label styleClass="LBLContent" text="Puedes continuar usando la aplicación. Los datos se sincronizarán cuando se restaure la conexión." wrapText="true" />
                                   </children>
                               </VBox>
                           </children>
                       </AnchorPane>
                   </children>
               </VBox>
           </content>
       </ScrollPane>
   </children>
</AnchorPane>
